<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kivimaki.ligtaspinas.IncidentReport">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/showImg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="5dp"
            android:padding="10dp"
            android:src="@android:drawable/ic_menu_add" />

        <Button
            android:id="@+id/btnVAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/temp"
            android:text="View Uploaded Images"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:ems="10"
            android:gravity="top|left"
            android:hint="Type description here..."
            android:inputType="textMultiLine|textPersonName"
            android:maxLines="50"
            android:minLines="5"
            android:padding="8dp"
            android:scrollbars="horizontal" />

        <EditText
            android:id="@+id/txtLoc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:elevation="5dp"
            android:ems="10"
            android:hint="Your Current Location"
            android:inputType="textPersonName"
            android:padding="8dp" />

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:elevation="5dp"
            android:ems="10"
            android:enabled="false"
            android:hint="Sender Name"
            android:inputType="textPersonName"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnsend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/temp"
            android:text="Send Issue"
            android:textColor="#fff" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
